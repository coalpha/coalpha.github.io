{
   "compilerOptions": {
      "strict": true,
      "lib": [
         "ES5",
         "ES2015",
         "ES2016",
         "ES2018",
         "ES2019",
         "ES2020",
         "DOM"
      ],
      "target": "ESNEXT",
      "module": "CommonJS",
      "esModuleInterop": true,
      "moduleResolution": "Node",

      "outDir": "ts/bin",

      "newLine": "lf",
   },
   "include": ["ts/**/*.ts"]
}
